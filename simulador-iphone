    <div class="container">
      <div class="iphone-display">
        <img id="iphoneImage" src="https://upload.wikimedia.org/wikipedia/commons/f/f1/IPhone_14_Pro_vector.svg" />
      </div>

      <div class="card">
        <h2>Simule sua compra</h2>

        <div class="select-box">
          <label>Modelo do iPhone</label>
          <select id="modelo">
            <option value="3500">iPhone XR — R$ 3.500</option>
            <option value="4000">iPhone 11 — R$ 4.000</option>
            <option value="5000">iPhone 12 — R$ 5.000</option>
            <option value="6500">iPhone 13 — R$ 6.500</option>
            <option value="7500">iPhone 14 — R$ 7.500</option>
            <option value="8500">iPhone 15 — R$ 8.500</option>
            <option value="10000">iPhone 16 — R$ 10.000</option>
            <option value="12500">iPhone 17 Pro — R$ 12.500</option>
          </select>
        </div>

        <div class="input-box">
          <label>Número de parcelas</label>
          <input id="parcelas" type="number" min="1" max="24" value="12" />
        </div>

        <div class="buttons">
          <button class="btn" onclick="simular()">Simular</button>
          <button class="btn-outline">Gerar Link</button>
          <button class="btn-outline">Falar com Atendente</button>
        </div>

        <div id="resultado" class="result"></div>
      </div>
    </div>

    <script>
      function simular() {
        const preco = parseFloat(document.getElementById("modelo").value);
        const parcelas = parseInt(document.getElementById("parcelas").value);

        if (!parcelas || parcelas < 1) {
          document.getElementById("resultado").innerHTML =
            "Digite um número de parcelas válido.";
          return;
        }

        const valorParcela = (preco / parcelas).toFixed(2).replace(".", ",");

        document.getElementById("resultado").innerHTML =
          `Valor por parcela: <br><strong>R$ ${valorParcela}</strong>`;
      }
    </script>
